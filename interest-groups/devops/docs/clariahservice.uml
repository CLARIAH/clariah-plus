@startuml


skinparam class {
    HeaderBackgroundColor LightSteelBlue
    BackgroundColor LightGray
    ArrowColor Black
    BorderColor SteelBlue
}

title "CLARIAH Services: Data model"


class "Service" {
    name
    type
    provider
    url
    service components [0..*]
    software components [1..*]
    data components [0..*]
    themes [1..*]
    interoperability standards [0..*]
    technology readiness level
    stakeholder readiness level
    compliance level
    --
    <font color="DarkSlateGray"><i> An instance of software running
    <font color="DarkSlateGray"><i> somewhere (@provider) as a service
    <font color="DarkSlateGray"><i> for users (or machines) to interact
    <font color="DarkSlateGray"><i> with over the web.
}

class "Use Case" {
    user stories
    --
    <font color="DarkSlateGray"><i> A collection of user stories</i>
}

class "User Story" {
    description
    user type
    specificity
    themes
    --
    <font color="DarkSlateGray"><i> A minimal user story</i>
}

enum "User Type" {
    scholar,
    developer,
    administrator,
    collection provider,
}

enum "Story Specificity" {
    Specific,
    Generic,
    Pervasive
}


class "Software" {
    name
    user stories [1..*]
    functions [1..*]
    provider
    interfacetype
    themes [1..*]
    software components [0..*]
    data components [0..*]
    interoperability standards [0..*]
    source repository
    technology readiness level
    stakeholder readiness level
    compliance level
    --
    <font color="DarkSlateGray"><i> Any piece of software or software product </i>
    <font color="DarkSlateGray"><i> This refers to the codebase as such</i>
    <font color="DarkSlateGray"><i> rather than any specific instance</i>
    <font color="DarkSlateGray"><i> running in the infrastucture</i>
}

class "Data" {
    name
    description
    functions [1..*]
    provider
    source url
    data readiness level
    compliance level
    --
    <font color="DarkSlateGray"><i> A data collection</i>
    <font color="DarkSlateGray"><i> This refers to data collection as such</i>
    <font color="DarkSlateGray"><i> rather than to an instance</i>
    <font color="DarkSlateGray"><i> through which it is made available</i>
    <font color="DarkSlateGray"><i> in a particular application.</i>
}


class "Interoperability Standard" {
    name
    functions [1..*]
    type
    provider
    specification url
    data readiness level
    compliance level
    --
    <font color="DarkSlateGray"><i> An data standard, protocol, or API</i>
    <font color="DarkSlateGray"><i> standard that plays a role in an</i>
    <font color="DarkSlateGray"><i> implementation</i>
}

enum "Interface Type" {
    CommandLineInterface
    ApplicationProgrammingInterface
    WebApplicationProgrammingInterface
    GraphicalUserInterface
    TextUserInterface
    WebUserInterface
}

enum "Interoperability Type" {
    API
    WebAPI
    DataFormat
    CommunicationProtocol
}

class "Provider" {
    name
    type
    affiliation [0..1]
    --
    <font color="DarkSlateGray"><i> The provider/maintainer of a service,</i>
    <font color="DarkSlateGray"><i> software component, or data collection.</i>
}

enum "Provider Type" {
    Project
    Institute
    WorkPackage
    Team
    Person
}

enum "CLARIAH+ Service Type" {
    Shared Service
    Domain Service
    Provisioning Service
}

enum "Theme" {
    Text
    Audio
    Visual
    Geo
    Metadata
    Annotation
    DevOps
    Curation
    Vocabularies
    Sustainability
    Monitoring
    Publication
    Processing
    Search
    UI-and-UX
    Workflows
}

enum "Technology Readiness Level" {
    "0 - Idea"
    "1 - Initial Research"
    "2 - Concept Formulated"
    "3 - Proof of Concept"
    "4 - Validated PoC"
    "5 - Early Prototype"
    "6 - Late Prototype"
    "7 - Release Candidate"
    "8 - Complete"
    "9 - Proven"
}

enum "Compliance Level" {
    "A - Excellent"
    "B - Good"
    "C - Adequate"
    "D - Lacking"
    "E - Bad"
    "F - Unacceptable"
}

"Service" "1" o--> "+" "User Story" : > user stories
"Service" "1" o--> "*" "Service" : > "service components"
"Service" "1" o--> "+" "Software": > "software components"
"Service" "1" o--> "*" "Data" : > "data components"
"Service" "1" o--> "*" "Interoperability Standard" : > "interoperability standards"
"Service" "1" o--> "1" "Provider" : > provider
"Service" "1" o--> "1" "CLARIAH+ Service Type" : > type

"Service" "1" o--> "1" "Technology Readiness Level" : > TRL
"Service" "1" o--> "1" "Compliance Level" : > CL

"Software" "1" o--> "+" "User Story" : > user stories
"Software" "1" o--> "*" "Software" : > "software components"
"Software" "1" o--> "*" "Data" : > "data components"
"Software" "1" o--> "*" "Interoperability Standard" : > "interoperability standards"
"Software" "1" o--> "*" "Interface Type" : > interfacetype
"Software" "1" o--> "1" "Provider" : > provider

"Software" "1" o--> "1" "Technology Readiness Level" : > TRL
"Software" "1" o--> "1" "Compliance Level" : > CL

"Interoperability Standard" "1" o--> "*" "Interoperability Type" : > type

"Data" "1" o--> "1" "Provider" : > provider

"Provider" "1" o--> "0..1" "Provider" : > affiliation
"Provider" "1" o--> "0..1" "Provider Type" : > type

"User Story" "1" o--> "1" "User Type" : > "user type"
"User Story" "1" o--> "1" "Story Specificity" : > "specificity"

"Use Case" "1" o--> "+" "User Story" : > "user stories"

"Software" "1" o--> "+" Theme : > themes
"Service" "1" o--> "+" Theme : > themes
"Data" "1" o--> "+" Theme : > themes
"User Story" "1" o--> "+" Theme : > themes
@enduml

